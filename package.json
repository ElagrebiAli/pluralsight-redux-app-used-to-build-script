{
  "name": "ps-redux",
  "version": "1.0.0",
  "description": "Starter kit for React and Redux Pluralsight course by Cory House",
  "scripts": {
    "start": "run-p start:dev start:api",
    "start:dev": "webpack-dev-server --config webpack.config.dev.js",
    "prestart:api": "node tools/resetDb.js",
    "start:api": "json-server --watch tools/db.json --delay 1000",
    "test": "jest",
    "test:watch": "jest --watchAll",
    "clean-dist": "rimraf ./dist && mkdir dist",
    "prebuild": "run-p clean-dist test",
    "build": "webpack --config webpack.config.prod.js"
  },
  "author": "Cory House",
  "engines": {
    "node": ">=8"
  },
  "license": "MIT",
  "dependencies": {
    "bootstrap": "4.2.1",
    "immer": "1.9.3",
    "prop-types": "15.6.2",
    "react": "next",
    "react-dom": "next",
    "react-redux": "6.0.0",
    "react-router-dom": "next",
    "react-toastify": "4.5.1",
    "redux": "4.0.1",
    "redux-thunk": "2.3.0",
    "reselect": "4.0.0"
  },
  "devDependencies": {
    "@babel/core": "7.2.2",
    "@babel/register": "7.0.0",
    "autoprefixer": "9.4.3",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "10.0.1",
    "babel-loader": "8.0.4",
    "babel-preset-react-app": "6.1.0",
    "chalk": "2.4.1",
    "css-loader": "2.0.2",
    "cssnano": "4.1.8",
    "enzyme": "3.8.0",
    "enzyme-adapter-react-16": "1.7.1",
    "eslint": "5.10.0",
    "eslint-loader": "2.1.1",
    "eslint-plugin-import": "2.14.0",
    "eslint-plugin-react": "7.11.1",
    "eslint-plugin-react-hooks": "0.0.0",
    "fetch-mock": "7.2.7",
    "html-webpack-plugin": "3.2.0",
    "jest": "23.6.0",
    "json-server": "0.14.0",
    "mini-css-extract-plugin": "0.5.0",
    "npm-run-all": "4.1.5",
    "postcss-loader": "3.0.0",
    "react-test-renderer": "16.6.3",
    "react-testing-library": "5.4.2",
    "redux-immutable-state-invariant": "2.1.0",
    "redux-mock-store": "1.5.3",
    "rimraf": "2.6.2",
    "style-loader": "0.23.1",
    "webpack": "4.28.2",
    "webpack-bundle-analyzer": "3.0.3",
    "webpack-cli": "3.1.2",
    "webpack-dev-server": "3.1.13"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/coryhouse/pluralsight-redux-starter"
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended",
      "plugin:import/errors",
      "plugin:import/warnings"
    ],
    "plugins": [
      "react",
      "react-hooks"
    ],
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "env": {
      "browser": true,
      "node": true,
      "jest": true,
      "es6": true
    },
    "rules": {
      "no-debugger": "warn",
      "no-console": "warn",
      "react-hooks/rules-of-hooks": "error"
    }
  },
  "babel": {
    "presets": [
      "babel-preset-react-app"
    ]
  },
  "jest": {
    "setupFiles": [
      "raf/polyfill",
      "./tools/testSetup.js"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/tools/fileMock.js",
      "\\.(css|less)$": "<rootDir>/tools/styleMock.js"
    }
  }
}
